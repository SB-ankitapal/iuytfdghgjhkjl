{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "x-stoplight": {
    "id": "yg0jrf9zu9np8"
  },
  "title": "Money",
  "type": "object",
  "required": [
    "amount",
    "currencyCode"
  ],
  "properties": {
    "amount": {
      "type": "number",
      "x-stoplight": {
        "id": "dw1zti8hildun"
      },
      "format": "double",
      "example": 1000000
    },
    "currencyCode": {
      "type": "string",
      "x-stoplight": {
        "id": "ms2i1qowsevtj"
      },
      "minLength": 3,
      "maxLength": 3,
      "pattern": "^[A-Z]{3}$",
      "example": "USD"
    }
  },
  "description": "Contains the currency information supported by Verisk Synergy Studio."
}